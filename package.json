{
	"name": "mistkafka-extension",
	"displayName": "mistkafka-extension",
	"description": "mistkafka's personal extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.myFindFile",
		"onCommand:extension.newFile",
    "onCommand:extension.closeOtherGroupsAndHideSidebarVisibility",
    "onCommand:extension.myDeleteCurrentFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.myFindFile",
				"title": "My find file"
			},
			{
				"command": "extension.newFile",
				"title": "New File"
      },
      {
        "command": "extension.closeOtherGroupsAndHideSidebarVisibility",
        "title": "My close other groups"
      },
      {
        "command": "extension.myDeleteCurrentFile",
        "title": "My delete current file"
      }
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/lodash": "^4.14.138",
		"@types/shelljs": "^0.8.5",
		"lodash": "^4.17.21",
		"shelljs": "^0.8.3"
	}
}
